{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "lib": [
      "dom",
      "dom.iterable",
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": false,
    "paths": {
      "@src/*": ["src/*"],
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "sourceRoot": "/",
    "strict": false,
    "target": "es5",
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "**/*.ts",
  ]
}
